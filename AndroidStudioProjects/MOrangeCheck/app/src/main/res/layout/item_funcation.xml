<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/fl_meeting_funcation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item2_height"
        android:background="@drawable/btn_bg_selector"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_funcation"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/xiaoxi" />

            <TextView
                android:id="@+id/tv_funcation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="消息"
                android:padding="15dp"
                android:gravity="center"
                android:textColor="@color/black1" />


        </LinearLayout>

        <ImageView
            style="@style/ArrowRight"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/item_margin_left" />

    </FrameLayout>

</layout>
