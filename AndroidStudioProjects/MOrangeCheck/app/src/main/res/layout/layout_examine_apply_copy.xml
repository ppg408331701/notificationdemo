<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white0"
        tools:showIn="@layout/fragment_common_time_apply">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/item_padding_left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="抄送人" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(审批人全部统一后将抄送给一下人员)"
                android:textColor="@color/gray5"
                android:paddingLeft="10dp"
                android:textSize="10sp" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/ll_examine_man"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/copy_iv_addimg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/examine_addimg"/>


            </LinearLayout>

        </HorizontalScrollView>


    </LinearLayout>
</layout>
