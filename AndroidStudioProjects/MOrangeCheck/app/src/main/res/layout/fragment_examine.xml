<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroud_theme"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_top" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_shengqing"
                    style="@style/examine_head">

                    <ImageView
                        android:id="@+id/iv_shengqing"
                        android:src="@mipmap/icon_shengqing"
                        style="@style/examine_iv"/>

                    <TextView
                        style="@style/examine_text"
                        android:text="申请" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shenpi"
                    style="@style/examine_head">

                    <ImageView
                        android:id="@+id/iv_shenpi"
                        android:src="@mipmap/icon_shenpi"
                        style="@style/examine_iv" />

                    <TextView

                        style="@style/examine_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审批" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_chaosong"
                    style="@style/examine_head">

                    <ImageView
                        android:id="@+id/iv_chaosong"
                        android:src="@mipmap/icon_chaosong"
                        style="@style/examine_iv"/>

                    <TextView
                        style="@style/examine_text"
                        android:text="抄送" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="发起申请" />

            <GridView
                android:id="@+id/gv_funcation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:cacheColorHint="#00000000"
                android:columnWidth="100dp"
                android:fadingEdge="none"
                android:gravity="center"
                android:numColumns="3"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:visibility="visible">


            </GridView>


        </LinearLayout>

    </ScrollView>


</layout>
