<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item2_height"
        android:background="@color/white0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_normal"
                android:text="消息"
                android:textColor="@color/black1" />

        </LinearLayout>

        <ImageView
            style="@style/ArrowRight"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/item_margin_left" />

    </FrameLayout>

</layout>
